<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".auth.presentation.AuthFragment">

    <ImageView
        android:id="@+id/frg_auth__icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_app_icon_24_black"
        app:layout_constraintBottom_toTopOf="@id/frg_auth__splash_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/primary" />

    <TextView
        android:id="@+id/frg_auth__splash_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/frg_auth__auth_with"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="@string/auth_with"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/frg_auth__vk" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/frg_auth__google"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/button_background"
        android:padding="16dp"
        android:src="@drawable/ic_google_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/frg_auth__vk"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/frg_auth__vk"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/button_background"
        android:padding="16dp"
        android:src="@drawable/ic_logo_vk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/frg_auth__ok"
        app:layout_constraintStart_toEndOf="@id/frg_auth__google" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/frg_auth__ok"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/button_background"
        android:padding="16dp"
        android:src="@drawable/ic_odkl_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/frg_auth__vk" />

    <View
        android:id="@+id/frg_auth__shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:background="@color/black"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/frg_main__progress_bar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>