<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@drawable/background_selectable_item_list">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/create_group_layout__title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/create_group" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/create_group_layout__subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/rippleColor"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/create_group_layout__title"
        app:layout_constraintStart_toEndOf="@id/create_group_layout__title"
        tools:text="25 participants" />

    <View
        android:id="@+id/create_group_layout__divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/rippleColor"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>