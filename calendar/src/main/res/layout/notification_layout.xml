<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@drawable/background_selectable_item_list">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/layout_notification__title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="1dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="Уведомления" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/layout_notification__switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:theme="@style/SharedPlannerSwitch" />

    <View
        android:id="@+id/fragment_notifications__divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/rippleColor" />

</RelativeLayout>