    <style name="ShowGroupsDialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!--primaryText-->
        <item name="colorPrimary">@color/black</item>
        <!--accent-->
        <item name="colorAccent">@color/primaryVariant</item>
        <!--background-->
        <item name="colorSurface">#FFFFFFFF</item>
        <item name="buttonBarPositiveButtonStyle">@style/DayTheme.Alert.Button.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/DayTheme.Alert.Button.Neutral</item>
        <item name="buttonBarNegativeButtonStyle">@style/DayTheme.Alert.Button.Negative</item>
        <item name="materialAlertDialogTitleTextStyle">@style/DayTheme.Alert.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DayTheme.Alert.Message.Text</item>
        <item name="android:checkedTextViewStyle">@style/DayTheme.Alert.Title.CheckedTextView</item>
    </style>

    <style name="DayTheme.Alert.Title.CheckedTextView" parent="@style/Widget.MaterialComponents.CheckedTextView">
        <!--secondaryText-->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DayTheme.Alert.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <!--primaryText-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DayTheme.Alert.Message.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <!--primaryText-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">100</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="DayTheme.Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <!--accent-->
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="DayTheme.Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <!--buttonTint-->
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="DayTheme.Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <!--destructive-->
        <item name="android:textColor">@color/rippleColor</item>
    </style>

    <!--DayTheme end-->

    <style name="DatePickerDialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:colorAccent">@color/primaryVariant</item>     <!--header background-->
        <item name="android:backgroundTint">@color/white</item>
        <item name="colorAccent">@color/primaryVariant</item>     <!--header background-->
        <item name="android:windowBackground">@color/white</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/primaryVariant</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/black</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/black</item>    <!--days of the week-->
    </style>

</resources>